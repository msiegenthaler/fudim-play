# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /dimension                  controllers.Dimensions.index
POST    /dimension                  controllers.Dimensions.add
GET     /dimension/:dim             controllers.Dimensions.get(dim: String)
POST    /dimension/:dim             controllers.Dimensions.addValue(dim: String)

GET     /fact                       controllers.Facts.list
POST    /fact                       controllers.Facts.add
GET     /fact/:fact                 controllers.Facts.view(fact: String)
POST    /fact/:fact/dimension/add    controllers.Facts.addDimension(fact: String, name: String)
POST    /fact/:fact/dimension/remove controllers.Facts.removeDimension(fact: String, name: String)
POST    /fact/:fact/aggregation     controllers.Facts.setAggregation(fact: String)

GET     /fact/:fact/value           controllers.Facts.get(fact: String, pos: Point)
PUT     /fact/:fact/value           controllers.Facts.save(fact: String, pos: Point)

GET     /fact/:fact/table/:d1/:d2   controllers.Tables.show(fact: String, d1: String, d2: String, filter: Point ?= Point.empty, sum1: Boolean ?= false, sum2: Boolean ?= false)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/javascripts/routes.js   controllers.Application.javascriptRoutes()
GET     /assets/img/glyphicons-halflings.png        controllers.Assets.at(path="/public", file="/images/bootstrap/glyphicons-halflings.png")
GET     /assets/img/glyphicons-halflings-white.png  controllers.Assets.at(path="/public", file="/images/bootstrap/glyphicons-halflings-white.png")
GET     /assets/*file               controllers.Assets.at(path="/public", file)
