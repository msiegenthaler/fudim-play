# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /dimension                  controllers.Dimensions.index
POST    /dimension                  controllers.Dimensions.add
GET     /dimension/:name            controllers.Dimensions.get(name: String)
POST    /dimension/:name            controllers.Dimensions.addValue(name: String)

GET     /fact                       controllers.Facts.list
POST    /fact                       controllers.Facts.add
GET     /fact/:name                 controllers.Facts.view(name: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
